/* pages/mine/mine.wxss */

.container-mine {
    width: 100%;
    height: 100%;
}

/* 顶部组件 */
.container-mine .mine-top-background {
    width: 100%;
    height: 308rpx;
}

/* 新机环保承诺组件 */
.mine-promise .mine-promise-title {
    font-size: 36rpx;
    text-align: left;
    margin-left: 24rpx;
    font-weight: 500;
}

.mine-promise .mine-promise-container {
    display: inline-block;
}

.mine-promise .item {
    display: flex;
    width: 375rpx;
    height: 100rpx;
    align-items: center;
}

.item .icon{
    margin-left: 66rpx;
    width: 42rpx;
    height: 42rpx;
}

.item .icon-desc {
    margin-left: 21rpx;
}

.icon-desc .desc-title {
    margin-top: 30rpx;
    font-size: 27rpx;
    font-weight: 400;
    color: #333;
}

.icon-desc .desc-body {
    font-size: 23rpx;
    color: #999;
}



/* 在线咨询组件 */
.container-mine .mine-asks-background {
    position: relative;
    width: 702rpx;
    height: 186rpx;
    margin: 0 auto;
}

.mine-asks-img {
    width: 702rpx;
    height: 186rpx;
}

.asks-title {
    position: absolute;
    font-size: 34rpx;
    color: #333;
    left: 74rpx;
    top: 37rpx;
}

.asks-body {
    position: absolute;
    font-size: 24rpx;
    float: left;
    color: #666;
    left: 74rpx;
    bottom: 36rpx;
    width: 486rpx;
    height: 58rpx;
    text-align: left;
}
