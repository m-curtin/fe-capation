@import '/template/environProtect/environProtect.wxss';
@import '/template/onlineConsult/onlineConsult.wxss';

.container-mine {
    width: 100%;
    height: 100%;
}

/* 顶部组件 */
.container-mine .mine-top-background {
    width: 100%;
    height: 308rpx;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}

button {
    background-color: rgb(247, 247, 247);
    border-radius: 0rpx;
    padding: 0rpx;
    margin: 0rpx;
    display: inline-block;
    line-height: 1;
}

button::after {
    /*button的边框样式是通过::after方式实现的*/
    border: none;
}

.button-hover {
    /*点击后样式*/
    color: #000;
    background-color: rgb(247, 247, 247);
}

